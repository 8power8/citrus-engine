<exporter>
    
    <!-- identifier of the exporter -->
	<name>citrus-nape</name>
	
	<!-- name for the dropbox -->
    <displayName>Citrus Engine Nape (FLASH)</displayName>
	
	<!-- description of the exporter -->
    <description>Citrus Engine Nape (FLASH)</description>
	
	<!-- exporter version -->
	<version>1.0</version>
	
	<!-- direction of the y axis: up / down -->
    <yAxisDirection>down</yAxisDirection>
	
	<!-- physics engine to use: box2d, chipmunk -->
	<physicsEngine><!--nape-->generic</physicsEngine>
	
	<!-- name of the template file -->
    <template>citrusengine.as</template>
	
	<!-- file exension for the data file -->
	<fileExtension>as</fileExtension>
	
	<!-- anchor point settings -->
	<anchorPoint>
	    <!-- are anchor points supported ? yes/no -->
		<enabled>no</enabled>
		
		<!-- relative position of the default anchor point -->
		<relX>0.0</relX>		
		<relY>0.0</relY>
	</anchorPoint>

    <origin>
        <!--
        origin (0/0) point of the polygons 
        can be set to "anchorPoint" or "fixed"
        Use 
		<relX>0.5</relX>		
		<relY>0.5</relY>
		to specify a fixed origin.
		Default is 0.5/0.5
        -->
        <type>fixed</type>
		<relX>0.0</relX>		
        <relY>1.0</relY>
    </origin>
	
	<!-- custom global parameters -->
	<global>
	</global>
	
	<!-- custom body parameters -->
	<body>
	</body>
	
	<!-- custom fixture parameters -->
	<fixture>
		<parameter>
			<name>elasticity</name>
			<displayName>elasticity</displayName>
			<type>float</type>
			<default>0.2</default>
		</parameter>
		<parameter>
			<name>dynamicFriction</name>
			<displayName>dynamicFriction</displayName>
			<type>float</type>
			<default>1</default>
		</parameter>
		<parameter>
			<name>staticFriction</name>
			<displayName>staticFriction</displayName>
			<type>float</type>
			<default>1</default>
		</parameter>
		<parameter>
			<name>density</name>
			<displayName>density</displayName>
			<type>float</type>
			<default>1</default>
		</parameter>
		<parameter>
			<name>rollingFriction</name>
			<displayName>rollingFriction</displayName>
			<type>float</type>
			<default>0</default>
		</parameter>
    </fixture>
</exporter>

